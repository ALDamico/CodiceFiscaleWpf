<Window x:Class="CodiceFiscaleUI.DatePicker.DatePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodiceFiscaleUI.DatePicker"
        mc:Ignorable="d"
        Title="Data di nascita" ResizeMode="NoResize" SizeToContent="WidthAndHeight" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Calendar Grid.Row="0" SelectedDate="{Binding CurrentPerson.DateOfBirth}" SelectionMode="SingleDate" x:Name="calDatePicker" SelectedDatesChanged="calDatePicker_SelectedDatesChanged"></Calendar>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnOk" Content="Ok" Click="btnOk_Click" Width="40"></Button>
            <Separator Visibility="Hidden" Width="10"></Separator>
            <Button x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click" Width="40"></Button>
        </StackPanel>
    </Grid>
</Window>
